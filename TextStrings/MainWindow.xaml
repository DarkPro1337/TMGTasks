<Window x:Class="TextStrings.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TextStrings"
        mc:Ignorable="d"
        Title="TextStrings" Height="300" Width="800" WindowStartupLocation="CenterScreen">
    <Grid x:Name="Main">
        <!-- GRID 1 -->
        <!-- Input header -->
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid x:Name="InputHeader" Margin="8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="242*"/>
                <ColumnDefinition Width="150"/>
            </Grid.ColumnDefinitions>
            <TextBlock x:Name="IDLabel" Text="Идентификаторы строк: " Margin="4"/>
            <TextBox x:Name="IDBox" Grid.Column="1" Margin="0,0,8,0"/>
            <Button x:Name="IDCount" Grid.Column="2" Content="Подсчитать" Command="{Binding Count}" />
        </Grid>
        <!-- GRID 2 -->
        <!-- Output content -->
        <Border x:Name="ContentBorder" BorderBrush="Black" BorderThickness="1" Grid.Row="1" Margin="8">
            <DataGrid x:Name="ContentTable" Margin="4" BorderBrush="White" Background="White">
                <DataGrid.Columns>
                    <DataGridTextColumn Width="1*" Header="Текст" Binding="{Binding Path=Text}"/>
                    <DataGridTextColumn Width="0.3*" MaxWidth="150" Header="Количество слов" Binding="{Binding Path=WordsCount}"/>
                    <DataGridTextColumn Width="0.3*" MaxWidth="150" Header="Количествол гласных" Binding="{Binding Path=Vowels}"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
    </Grid>
</Window>
